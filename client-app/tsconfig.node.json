{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true, // Warns about unused local variables
    "noUnusedParameters": true // Warns about unused function parameters
  },
  "include": [
    "vite.config.ts"
  ]
}